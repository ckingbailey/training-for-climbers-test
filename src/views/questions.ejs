        }

        label[for*="-4"] {
            cursor: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='40' height='48' viewport='0 0 100 100' style='fill:black;font-size:24px;'><text y='50%'>üëç</text></svg>")
      16 0, auto;
        }

        label[for*="-5"] {
            cursor: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='40' height='48' viewport='0 0 100 100' style='fill:black;font-size:24px;'><text y='50%'>ü§ò</text></svg>")
      16 0, auto;
        }


        @media screen and (max-width: 375px) {
            label {
                display: flex;
            }

            .submit-button {
                width: 100%;
                text-align: center;
            }
        }
    </style>
</head>
<body>
    <form id="self-assessment-test" name="self-assessment-test">
        <% for (let i in questions) { %>
        <p><%= +i + 1 %>. <%= questions[i].text %></p>
        <% for (let j = 0; j <= 5; j++) { %>
        <% var id = `q${ +i + 1}-${j}` %>
        <input
            type="radio"
            id="<%= id %>"
            name="q<%= +i + 1 %>"
            value="<%= j %>"
        >
        <label
            for="<%= id %>"
        ><% switch (j) {
            case 0: %>
            almost always
          <% break;

            case 1: %>
            often
          <% break;

            case 2: %>
            about half the time
          <% break;

            case 3: %>
            occasionally
            <% break;

            case 4: %>
            seldom
          <% break;

            case 5: %>
            never
            <% break;

            default:
            break; } %>
        </label>



        <% } %>
        <% } %>
        <button class="submit-button" type="submit">Submit</button>
    </form>
    <div id="answer-zone" class="answer-zone">
        <div class="answer-group" id="group-1"></div>
        <div class="answer-group" id="group-2"></div>
        <div class="answer-group" id="group-3"></div>
    </div>
    <script src="js/handle-form-submit.js"></script>
</body>
