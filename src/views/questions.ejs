        label:hover {
            color: var(--selected-color);
        }

        .submit-button:hover {
            border: solid .125rem var(--selected-color);
            color: var(--selected-color);
            background-image: 
                repeating-linear-gradient(
                    135deg, 
                    #E94584, 
                    #E94584 1rem,
                    #F17C58 1rem,
                    #F17C58 2rem,
                    #FFDC18 2rem,
                    #FFDC18 3rem,
                    #27DBB1 3rem,
                    #27DBB1 4rem,
                    #24AADB 4rem,
                    #24AADB 5rem, 
                    #27DBB1 5rem,
                    #27DBB1 6rem,
                    #FFDC18 6rem,
                    #FFDC18 7rem,
                    #F17C58 7rem,
                    #F17C58 8rem,
                    #E94584 8rem, 
                    #E94584 9rem,
                    #F17C58 9rem,
                    #F17C58 10rem,
                    #FFDC18 10rem,
                    #FFDC18 11rem,
                    #27DBB1 11rem,
                    #27DBB1 12rem,
                    #24AADB 12rem,
                    #24AADB 13rem, 
                    #27DBB1 13rem,
                    #27DBB1 14rem,
                    #FFDC18 14rem,
                    #FFDC18 15rem,
                    #F17C58 15rem,
                    #F17C58 16rem
                    );
                background-size: 200% 200%;
                animation: stripes 1s linear infinite;
            }

        @keyframes stripes {
            100% {
                background-position: 100% 100%;
            }
        }

        .answer-zone {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: .75rem;
        }
        .answer-group {
            padding: 2rem;
            display: flex;
            text-align: center;
            justify-content: space-between;
            flex-direction: column;
        }

        .answer-group h3 {
            font-size: 1.5rem;
            font-weight: 500;
            line-height: 1;
        }

        .answer-group p {
            font-size: 2rem;
            font-weight: 600;
        }


        .answer-group:nth-child(1) {
            background: #ffd0d0;
        }
        .answer-group:nth-child(2) {
            background: #ffffd0;
        }
        .answer-group:nth-child(3) {
            background: #d0ddff;
        }


        /****** Cursors *****/

        label[for*="-0"] {
            cursor: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='40' height='48' viewport='0 0 100 100' style='fill:black;font-size:24px;'><text y='50%'>ü•µ</text></svg>")
